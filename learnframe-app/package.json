{
  "name": "learnframe-app",
  "version": "1.2.0",
  "private": true,
  "description": "Learn blockchain knowledge, earn LEARN tokens on Base - Now with Mini-App support",
  "keywords": [
    "blockchain",
    "education", 
    "base",
    "web3",
    "mini-app",
    "farcaster",
    "learn-to-earn",
    "defi",
    "quiz"
  ],
  "homepage": "https://learnframe.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/serayd61/learnframe.git"
  },
  "author": {
    "name": "LearnFrame Team",
    "email": "team@learnframe.app",
    "url": "https://learnframe.vercel.app"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "preview": "npm run build && npm run start",
    "clean": "rm -rf .next dist",
    "miniapp:build": "npm run build && npm run miniapp:bundle",
    "miniapp:bundle": "node scripts/bundle-miniapp.js",
    "miniapp:validate": "node scripts/validate-miniapp.js",
    "deploy": "vercel --prod",
    "postbuild": "next-sitemap"
  },
  "dependencies": {
    "@coinbase/onchainkit": "^1.1.1",
    "@farcaster/frame-sdk": "^0.1.10",
    "@farcaster/miniapp-sdk": "^0.1.0",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.90.2",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "axios": "^1.12.2",
    "ethers": "^6.15.0",
    "framer-motion": "^12.23.22",
    "next": "15.5.4",
    "next-pwa": "^5.6.0",
    "next-sitemap": "^4.2.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.13.1",
    "viem": "^2.37.12",
    "wagmi": "^2.17.5",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-config-next": "15.5.4",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "miniApp": {
    "name": "LearnFrame",
    "version": "1.2.0",
    "description": "Learn blockchain knowledge, earn LEARN tokens on Base",
    "icon": "/icon.png",
    "entryPoint": "/",
    "permissions": [
      "wallet.connect",
      "wallet.send",
      "user.profile",
      "notifications.push",
      "share.content",
      "storage.local"
    ],
    "supportedChains": ["base"],
    "categories": ["education", "defi", "gaming"],
    "minSdkVersion": "0.1.0"
  },
  "pwa": {
    "name": "LearnFrame - Learn & Earn",
    "short_name": "LearnFrame",
    "description": "Master blockchain knowledge, earn real rewards on Base",
    "theme_color": "#7C3AED",
    "background_color": "#000000",
    "start_url": "/",
    "display": "standalone",
    "orientation": "portrait"
  },
  "next-sitemap": {
    "siteUrl": "https://learnframe.vercel.app",
    "generateRobotsTxt": true,
    "exclude": ["/api/*", "/admin/*"],
    "robotsTxtOptions": {
      "policies": [
        {
          "userAgent": "*",
          "allow": "/"
        }
      ]
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/*.(test|spec).(ts|tsx|js)"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "rules": {
      "prefer-const": "error",
      "no-unused-vars": "warn",
      "@typescript-eslint/no-unused-vars": "warn"
    }
  }
}
